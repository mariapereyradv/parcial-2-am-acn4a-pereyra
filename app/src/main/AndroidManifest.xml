<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jfam.leido">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_oscuro"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_oscuro"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leido">

        <!-- AURELIA INTRO (Pantalla de lanzamiento) -->
        <activity
            android:name=".AureliaIntroActivity"
            android:exported="true"
            android:theme="@style/Theme.Leido.AureliaIntro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SPLASH ACTIVITY -->
        <activity
            android:name=".SplashActivity"
            android:exported="false"
            android:theme="@style/Theme.Leido.Splash"/>

        <!-- LOGIN ACTIVITY -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <!-- REGISTRO ACTIVITY -->
        <activity
            android:name=".RegistroActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <!-- MAIN ACTIVITY (Home) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"/>

    </application>

</manifest>