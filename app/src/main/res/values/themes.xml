<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== TEMA BASE: LEÍDO CON PALETA AURELIA ===== -->
    <style name="Theme.Leido" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>

        <!-- Colores terciarios -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_light</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>

        <!-- Superficies y fondos -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Tipografía (usando fuentes del sistema) -->
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>

        <!-- Elevaciones y sombras -->
        <item name="elevation">2dp</item>
    </style>

    <!-- ===== TEMA SPLASH (sin action bar, fondo blanco) ===== -->
    <style name="Theme.Leido.Splash" parent="Theme.Leido">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- ===== TEMA PARA DIÁLOGOS FULLSCREEN ===== -->
    <style name="Theme.Leido.FullScreenDialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- ===== ESTILOS DE TEXTOS ===== -->

    <!-- Título grande (Logo, Hero) -->
    <style name="TextAppearance.Leido.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Título mediano (Secciones) -->
    <style name="TextAppearance.Leido.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Subtítulo -->
    <style name="TextAppearance.Leido.Subtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Cuerpo de texto -->
    <style name="TextAppearance.Leido.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Texto secundario -->
    <style name="TextAppearance.Leido.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- ===== ESTILOS DE BOTONES ===== -->

    <!-- Botón primario -->
    <style name="Widget.Leido.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Botón secundario -->
    <style name="Widget.Leido.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- FAB (Floating Action Button) -->
    <style name="Widget.Leido.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- ===== ESTILOS DE INPUTS ===== -->

    <style name="Widget.Leido.EditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_primary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- ===== TABS ===== -->

    <style name="Widget.Leido.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/secondary</item>
        <item name="tabSelectedTextColor">@color/secondary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <!-- ===== CARDS ===== -->

    <style name="Widget.Leido.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>