<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/surface"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <!-- PORTADA con imagen real -->
        <FrameLayout
            android:layout_width="@dimen/book_cover_width"
            android:layout_height="@dimen/book_cover_height">

            <ImageView
                android:id="@+id/imgPortada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_light"
                android:scaleType="centerCrop"
                android:elevation="2dp"
                android:contentDescription="@string/cd_book_cover"/>

            <!-- Borde decorativo -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"
                android:clickable="false"
                android:focusable="false"/>
        </FrameLayout>

        <!-- INFORMACIÃ“N -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo del libro"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/margin_tiny"/>

            <TextView
                android:id="@+id/txtAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autor_desconocido"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:layout_marginTop="@dimen/margin_mini"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <!-- BOTONES DE ACCIÃ“N -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/btnEditar"
                android:layout_width="@dimen/icon_action"
                android:layout_height="@dimen/icon_action"
                android:text="âœï¸"
                android:textSize="@dimen/icon_small"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cd_edit_book"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btnEliminar"
                android:layout_width="@dimen/icon_action"
                android:layout_height="@dimen/icon_action"
                android:text="ðŸ—‘ï¸"
                android:textSize="@dimen/icon_small"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cd_delete_book"
                android:layout_marginStart="@dimen/margin_mini"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>