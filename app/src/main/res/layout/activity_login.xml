<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- LOGO Y TÍTULO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:text="L"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:gravity="center"
                android:background="@color/primary_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eído"
                android:textColor="@color/primary"
                android:textSize="40sp"
                android:fontFamily="serif"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <!-- SUBTÍTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu diario literario personal"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp"/>

        <!-- TAGLINE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin redes · Sin presión"
            android:textColor="@color/secondary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:layout_marginBottom="48dp"/>

        <!-- EMAIL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="tu@email.com"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp"/>

        <!-- CONTRASEÑA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etContrasena"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="••••••"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="8dp"/>

        <!-- CHECKBOX POLÍTICAS -->
        <CheckBox
            android:id="@+id/checkPoliticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="He leído y acepto la política de privacidad"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:buttonTint="@color/primary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"/>

        <!-- BOTÓN INICIAR SESIÓN -->
        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="INICIAR SESIÓN"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="24dp"/>

        <!-- TEXTO REGISTRO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tenés cuenta? "
                android:textColor="@color/text_secondary"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtRegistrarse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrate acá"
                android:textColor="@color/secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"/>

        </LinearLayout>

        <!-- INFO USUARIO DEMO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario demo: demo / 1234"
            android:textColor="@color/text_tertiary"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="monospace"/>

    </LinearLayout>

</ScrollView>