<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <!-- LOGO GRANDE -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_medium">

        <!-- "L" con fondo violeta claro -->
        <TextView
            android:layout_width="@dimen/book_logo_width_large"
            android:layout_height="@dimen/book_logo_height_large"
            android:text="@string/app_name_initial"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_display_large"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="center"
            android:background="@color/primary_light"/>

        <!-- "eído" en violeta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_rest"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_display_small"
            android:fontFamily="serif"
            android:layout_marginStart="@dimen/margin_small"/>

    </LinearLayout>

    <!-- SUBTÍTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_subtitle"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_title"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_small"/>

    <!-- TAGLINE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_tagline"
        android:textColor="@color/secondary"
        android:textSize="@dimen/text_body"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_small"/>

</LinearLayout>