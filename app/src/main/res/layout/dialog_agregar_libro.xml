<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_large">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_book_title"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_headline_small"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="@dimen/icon_action"
                android:layout_height="@dimen/icon_action"
                android:text="ðŸ“š"
                android:textSize="@dimen/icon_large"
                android:gravity="center"/>

        </LinearLayout>

        <!-- TÃTULO DEL LIBRO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_titulo"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small"/>

        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="@string/placeholder_titulo"
            android:inputType="textCapSentences"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/text_subtitle"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <!-- AUTOR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_autor"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small"/>

        <EditText
            android:id="@+id/etAutor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="@string/placeholder_autor"
            android:inputType="textCapWords"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/text_subtitle"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <!-- EDITORIAL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_editorial"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small"/>

        <EditText
            android:id="@+id/etEditorial"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="@string/placeholder_editorial"
            android:inputType="textCapWords"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/text_subtitle"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <!-- ISBN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_isbn"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small"/>

        <EditText
            android:id="@+id/etIsbn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="@string/placeholder_isbn"
            android:inputType="text"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/text_subtitle"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <!-- PORTADA DEL LIBRO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PORTADA"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small"/>

        <!-- Vista previa de la imagen -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <ImageView
                android:id="@+id/imgVistaPrevia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_light"
                android:scaleType="centerCrop"
                android:contentDescription="Vista previa portada"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background" />
        </FrameLayout>

        <!-- Botones para elegir mÃ©todo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium">

            <Button
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ“ GALERÃA"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:background="@drawable/button_secondary"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnUsarUrl"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸŒ URL"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <!-- Campo URL (oculto inicialmente) -->
        <EditText
            android:id="@+id/etUrlPortada"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:hint="https://ejemplo.com/portada.jpg"
            android:inputType="textUri"
            android:padding="@dimen/padding_normal"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/margin_medium"
            android:visibility="gone"/>

        <!-- COMENTARIO / NOTAS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_notas"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_book_notas_hint"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_tiny"
            android:layout_marginBottom="@dimen/margin_small"
            android:alpha="0.8"/>

        <EditText
            android:id="@+id/etComentario"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comentario_height"
            android:hint="@string/placeholder_comentario"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top|start"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/text_subtitle"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/margin_xlarge"/>

        <!-- NOTA PRIVACIDAD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:background="@color/primary_light"
            android:layout_marginBottom="@dimen/margin_large">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’"
                android:textSize="@dimen/icon_medium"
                android:layout_marginEnd="@dimen/margin_medium"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_book_privacy"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_tiny"
                android:lineSpacingExtra="@dimen/margin_tiny"/>

        </LinearLayout>

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:text="@string/add_book_cancel"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold"
                android:background="@drawable/button_secondary"
                android:layout_marginEnd="@dimen/margin_small"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:text="@string/add_book_save"
                android:textColor="@color/white"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:elevation="@dimen/elevation_medium"
                android:stateListAnimator="@null"
                android:layout_marginStart="@dimen/margin_small"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>